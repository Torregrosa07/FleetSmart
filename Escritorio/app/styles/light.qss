/* --- TEMA CLARO --- */

/* Fondo General (No blanco puro, un gris muy suave) */
QWidget {
    background-color: #f4f7f6; 
    color: #333333;
    font-family: "Montserrat";
}

/* Paneles (Blancos para resaltar sobre el fondo gris) */
QFrame, QGroupBox {
    background-color: #ffffff;
}

/* Etiquetas */
QLabel {
    background-color: transparent;
    color: #1f2937; /* Gris casi negro */
}

/* --- BOTONES (El MISMO azul que en el oscuro) --- */
QPushButton {
    background-color: #3b82f6;
    color: white;
    padding: 8px;
    font-weight: bold;
}
QPushButton:hover {
    background-color: #2563eb;
}
QPushButton:pressed {
    background-color: #1d4ed8;
}

/* --- INPUTS --- */
QLineEdit, QTextEdit {
    background-color: #ffffff;
    color: #333;
    padding: 4px;
}

/* --- TABLAS --- */
QTableWidget {
    background-color: #ffffff;
    color: #333;
}
QTableWidget::item:selected {
    background-color: #3b82f6;
    color: white;
}
QHeaderView::section {
    background-color: #e5e7eb;
    color: #333;
    padding: 4px;
    font-weight: bold;
}